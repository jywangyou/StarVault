{
  "manifest_version": 3,
  "name": "繁星记",
  "version": "1.0",
  "description": "显示怎么通过 sidePanel.open() 打开一个侧边栏",
  "minimum_chrome_version": "116", //可安装的最低版本
  "background": {
    "service_worker": "service-worker.js" //指定后台脚本
  },
  "side_panel": {
    "default_path": "index.html" //侧边栏的默认页面
  },
  "action": {
    //"default_popup": "page.html"//指定弹出页面【屏蔽这里可以点击图标通过后台脚本直接打开侧边栏】
  },
  "content_scripts": [
    // {
    //   "js": [ "content-script.js" ], //指定内容脚本
    //   "matches": [ "https://www.google.com/*" ] //匹配的URL
    // }
  ],
  "permissions": [ "sidePanel", "contextMenus" ], //请求侧边栏和上下文菜单权限
  "icons": {
    "128": "images/logo-128.png"
  }
}
